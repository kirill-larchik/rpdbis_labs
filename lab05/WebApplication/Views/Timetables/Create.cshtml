@model WebApplication.ViewModels.TimetablesViewModel

<div class="container text-center w-50">
    <form method="post">
        <h2>Create new entity</h2>

        <div class="text-danger text-justify w-100 m-lg-0" asp-validation-summary="ModelOnly"></div>

        <p>
            <label asp-for="Timetable.DayOfWeek"></label><br />
            <input type="number" name="Timetable.DayOfWeek" class="w-75" />
        <p><span class="text-danger" asp-validation-for="Timetable.DayOfWeek"></span></p>

        <p>
            <label asp-for="Timetable.Month"></label><br />
            <input type="number" name="Timetable.Month" class="w-75" />
        <p><span class="text-danger" asp-validation-for="Timetable.Month"></span></p>

        <p>
            <label asp-for="Timetable.Year"></label><br />
            <input type="number" name="Timetable.Year" class="w-75" />
        <p><span class="text-danger" asp-validation-for="Timetable.Year"></span></p>

        <p>
            <label asp-for="Timetable.ShowId"></label><br />
            <select class="w-75" name="Timetable.ShowId" asp-for="Timetable.ShowId" asp-items="@(new SelectList(Model.Shows, "ShowId", "Name"))">
                <option selected>Please choose value</option>
            </select>
        <p><span class="text-danger" asp-validation-for="Timetable.ShowId"></span></p>

        <p>
            <label asp-for="Timetable.StartTime"></label><br />
            <input type="time" step="1" name="Timetable.StartTime" class="w-75" />
        <p><span class="text-danger" asp-validation-for="Timetable.StartTime"></span></p>

       @*TODO: Add a staff*@

        <p>
            <input type="submit" value="Add" class="btn btn-success w-75" />
        <p><a asp-action="Index" asp-route-page="@Model.CurrentHomePage" class="btn btn-danger w-75">Back</a></p>
    </form>
</div>

