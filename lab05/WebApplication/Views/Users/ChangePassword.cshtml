@model WebApplication.ViewModels.UsersViewModel

<form method="post" class="container text-center w-50">
    <h2>Change password</h2>

    <p>
        <input asp-for="User.Id" value="@Model.User.Id" hidden />
    </p>

    <div asp-validation-summary="All" class="text-danger"></div>

    <p>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" class="w-75" />
    <p>
        <span asp-validation-for="Password"></span>
    </p>

    <p>
        <label asp-for="NewPassword"></label><br />
        <input asp-for="NewPassword" class="w-75" />
    <p>
        <span asp-validation-for="NewPassword"></span>
    </p>

    <p>
        <input type="submit" value="Change" class="w-75 btn btn-success" />
    </p>
    <p>
        <a asp-action="Index" class="btn btn-danger w-75">Back</a>
    </p>
</form>
