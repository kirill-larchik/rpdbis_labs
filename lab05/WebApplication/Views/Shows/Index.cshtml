@model WebApplication.ViewModels.ShowsViewModel

<div class="container w-100">
    <form asp-route-id="@Model.PageViewModel.PageNumber">
        <h2 class="text-center">Table 'Shows'</h2>

        <p>
            <div class="container">
                <a asp-action="Create" asp-route-page="@Model.PageViewModel.PageNumber" class="btn btn-primary">Add new entity</a>
            </div>
        </p>

        <table class="table table-hover table-sm">
            <thead class="thead-dark text-center">
                <tr>
                    <th class="w-25"><label asp-for="Show.Name"></label></th>
                    <th class="w-25"><label asp-for="Description"></label></th>
                    <th class="w-25"><label asp-for="Modification"></label></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var entity in Model.Shows)
                {
                    <tr>
                        <td>@entity.Name</td>
                        <td>@entity.Description</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@entity.ShowId" asp-route-page="@Model.PageViewModel.PageNumber" class="btn btn-success">Details</a>
                            <a asp-action="Edit" asp-route-id="@entity.ShowId" asp-route-page="@Model.PageViewModel.PageNumber" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@entity.ShowId" asp-route-page="@Model.PageViewModel.PageNumber" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="container float-left">
            <div class="text-left float-left">
                <input type="number" name="page" value="@Model.PageViewModel.PageNumber" class="w-25" />
                <input type="submit" value="Move" class="btn btn-primary" />
            </div>

            <div class="text-right float-right">
                @if (Model.PageViewModel.HasPreviousPage)
                {
                    <a asp-action="Index" asp-route-page="@(Model.PageViewModel.PageNumber - 1)" class="btn btn-primary">Back</a>
                }
                @if (Model.PageViewModel.HasNextPage)
                {
                    <a asp-action="Index" asp-route-page="@(Model.PageViewModel.PageNumber + 1)" class="btn btn-primary">Next</a>
                }
            </div>
        </div>
    </form>
</div>
